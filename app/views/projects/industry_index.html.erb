<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-xs-12 div-background ">

      <div class="page-header">
        <h1>industry projects <small>web sites and applications worked on</small></h1>
      </div>

      <% @industry_projects.each do |project| %>

        <div class="row">
          <div class="col-sm-12 col-xs-12">
            <div class="div-background inner-div">
              <h3 class="no-top-margin"><%= project.name %></h3>
              <p><%= project.language %> | <%= link_to 'view source code', project.link %></p>
              <p><%= simple_format project.description %></p>
            </div>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>